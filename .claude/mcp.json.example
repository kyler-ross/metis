{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "description": "GitHub repos, PRs, issues access"
    },
    "posthog": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote@latest",
        "https://mcp.posthog.com/sse",
        "--header",
        "Authorization:Bearer ${POSTHOG_API_KEY}"
      ],
      "env": {
        "POSTHOG_API_KEY": "${POSTHOG_API_KEY}"
      },
      "description": "PostHog analytics, feature flags, and experiments"
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "figma-mcp"],
      "env": {
        "FIGMA_PERSONAL_ACCESS_TOKEN": "${FIGMA_PERSONAL_ACCESS_TOKEN}"
      },
      "description": "Figma design files and prototypes"
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "markov-slack-mcp"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}"
      },
      "description": "Slack messages and channels"
    },
    "granola": {
      "command": "npx",
      "args": ["-y", "granola-mcp-plus"],
      "description": "Granola meeting transcripts and notes"
    }
  }
}
